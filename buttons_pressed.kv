#:kivy 1.7.2
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import Factory kivy.factory.Factory

<CustomLayout>:
	canvas.before:
		Color: 
			rgba: .251, .251, .251, 1
		Rectangle:
			pos: self.pos
			size: self.size
		
<HomeScreen>:
	box_l: boxID
	BoxLayout:
		canvas.before:
			Color:
				rgba: .6, 0, 0, 1
			Rectangle: 
				pos: self.pos
				size: self.size
		orientation: 'horizontal'
		grid_l: gridID 
		id: boxID
    	CustomLayout:
    		id: gridID
    		btn1: btn1ID
    		btn2: btn2ID
    		btn3: btn3ID
    		btn4: btn4ID
    		btn5: btn5ID
    		btn6: btn6ID
    		btn7: btn7ID
    		btn8: btn8ID
    		#####################
        	cols: 2
        	padding: 20, 20
        	spacing: 30, 20
        	
        	#######################
        	Button:
            	id: btn1ID
            	text: 'Run this'
            	on_press: root.search_btn_pressed(self)
        	Button: 
        		id: btn2ID
        		text: 'Rocket League'
        		on_press: root.search_btn_pressed(self)
        	Button: 
        		id: btn3ID
        		text: 'Tester, wester'
