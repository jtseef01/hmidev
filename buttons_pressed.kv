        		on_press:root.search_btn_pressed(self)
        	Button: 
        		id: btn6ID
        		text: 'Go Cards' 
        		on_press:root.search_btn_pressed(self)
        	Button: 
        		id: btn7ID
        		text: 'Battery Low' 
        		on_press:root.search_btn_pressed(self)
        	Button: 
        		id: btn8ID
        		text: 'Power Saver' 
        		on_press:root.search_btn_pressed(self)
        GridLayout:
        	id: grid2
        	label1: label1ID
        	label2: label2ID
        	label3: label3ID
        	label4: label4ID
        	label5: label5ID
        	label6: label6ID
        	label7: label7ID
        	label8: label8ID
        	
        	cols: 2
        	size_hint: .6, .9
        	padding: 20, 20
        	spacing: 20, 1
        	row_default_height: '100dp'
