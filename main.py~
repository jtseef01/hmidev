
from kivy.app import App
from kivy.graphics import Color, Rectangle
from kivy.uix.boxlayout import BoxLayout
from kivy.uix.gridlayout import GridLayout
from kivy.uix.button import Button
from kivy.uix.label import Label
from kivy.uix.image import AsyncImage
from kivy.config import Config
Config.set('graphics', 'width', '800')
Config.set('graphics', 'height', '480')


l = Label(text='Tset', font_size='20sp', color=(0,0,0,1))
class RootWidget(GridLayout):
    pass


class CustomGridLayout(GridLayout):

    def __init__(self, **kwargs):
        # make sure we aren't overriding any important functionality
        super(CustomGridLayout, self).__init__(**kwargs)

        with self.canvas.before:
            self.rect = Rectangle(size=self.size, pos=self.pos)

        self.bind(size=self._update_rect, pos=self._update_rect)

    def _update_rect(self, instance, value):
        self.rect.pos = instance.pos
        self.rect.size = instance.size

class CustomBoxLayout(BoxLayout):

	def __init__(self, **kwargs):
		# make sure we aren't overriding any important functionality
		super(CustomBoxLayout, self).__init__(**kwargs)

		with self.canvas.before:
			self.rect = Rectangle(size=self.size, pos=self.pos)

		self.bind(size=self._update_rect, pos=self._update_rect)

	def _update_rect(self, instance, value):
		self.rect.pos = instance.pos
		self.rect.size = instance.size

def press_callback(obj):
	print("Button pressed,", obj.text)
	if obj.text == 'test1':
		l.text = "woot"
		print 'rocket power'
	if obj.text == 'LED':
		if obj.state == "down":
			print ("button on")
		else:
			print ("button off")
	if obj.text == 'Input':
		print("WOOOOO.")


class MainApp(App):

    def build(self):
		root = RootWidget(cols=2)
		with root.canvas.before:
			Color(1, 0, 0, .5)
  
		c = CustomGridLayout(cols=2, spacing=100, padding=30, row_default_height=100, size = (550, 480), size_hint =(None, None))
		root.add_widget(c)
       	
		test1 = Button(text="test1");
		test2 = Button(text="test2");
		test3 = Button(text="test3");
		test4 = Button(text="test4");
        
		test1.bind(on_press=press_callback)
		test2.bind(on_press=press_callback)
		test3.bind(on_press=press_callback)
		test4.bind(on_press=press_callback)
		
		c.add_widget(test1)
		c.add_widget(test2)
		c.add_widget(test3)
		c.add_widget(test4)
		
		c = CustomBoxLayout(orientation="vertical")
		root.add_widget(c)
		l2 = Label(text='Test', font_size='50sp', color=(0, 0, 0, 1))
		c.add_widget(l)
		c.add_widget(l2)
		
		with c.canvas.before:
			Color(1, 0, 0, .5)
		
		return root

if __name__ == '__main__':
	Config.set('graphics', 'width', '800')
	Config.set('graphics', 'height', '480')
	MainApp().run()
